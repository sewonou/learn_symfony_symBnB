{% extends 'base.html.twig' %}

{% block title %}Connexion au site{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-3">&nbsp;</div>
            <div class="col-md-6">
                <div class="bg-light py-3 px-3">
                    <h1>Connectez vous !</h1>
                    {% if hasError %}
                        Une erreur est survenue, Le nom d'utlisateur ou le mote de passe est incorrect
                    {% endif %}
                    <form action="{{ path('account_login') }}" method="post">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="text" placeholder="Adresse email..." id="email" name="_username"
                                   class="form-control" value="{{ username }}" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Mot de passe</label>
                            <input type="password" name="_password" id="password" placehoder="Mot de passe ..."
                                   class="form-control" required>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success">Connexion !</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>

    </div>

{% endblock %}
